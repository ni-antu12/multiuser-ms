generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FamilyGroup {
  id         String   @id @default(cuid())
  uuid       String   @unique @db.VarChar(8)  // UUID corto de 8 caracteres
  leader     String   @unique @db.VarChar(8)  // UUID corto del usuario líder
  tokenApp   String   @unique @map("token_app")
  maxMembers Int      @default(8)             // Máximo de miembros permitidos
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relaciones
  users User[]

  @@map("family_groups")
}

model User {
  id                String   @id @default(cuid())
  uuid              String   @unique @db.VarChar(8)  // UUID corto de 8 caracteres
  rut               String   @unique
  familyGroupsUuid  String?  @map("family_groups_uuid") @db.VarChar(8)  // UUID corto del grupo familiar
  email             String   @unique
  username          String?  // Generado automáticamente, ya no es requerido
  password          String
  firstName         String?
  lastNamePaterno   String?  @map("last_name_paterno")
  lastNameMaterno   String?  @map("last_name_materno")
  isActive          Boolean  @default(true)
  isLeader          Boolean  @default(false) @map("is_leader") // Indica si el usuario es líder
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relaciones
  familyGroup FamilyGroup? @relation(fields: [familyGroupsUuid], references: [uuid], onDelete: Cascade)

  @@map("users")
}

model Patient {
  id              String   @id @default(uuid()) @db.Uuid
  rut             String   @unique
  nombre          String
  apellidoPaterno String   @map("apellido_paterno")
  apellidoMaterno String?  @map("apellido_materno")
  correo          String   @unique
  telefono        String?
  password        String
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("patients")
}
