generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FamilyGroup {
  id         Int      @id @default(autoincrement())
  uuid       String   @unique @default(uuid()) @db.Uuid
  leader     String   @unique @db.Uuid  // UUID del usuario líder
  tokenApp   String   @unique @map("token_app")
  maxMembers Int      @default(8)             // Máximo de miembros permitidos
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relaciones
  users User[]

  @@map("family_groups")
}

model User {
  id                Int      @id @default(autoincrement())
  uuid              String   @unique @default(uuid()) @db.Uuid
  rut               String   @unique
  familyGroupsUuid  String?  @map("family_groups_uuid") @db.Uuid  // UUID del grupo familiar
  email             String   @unique
  username          String?  // Generado automáticamente, ya no es requerido
  password          String
  firstName         String?
  lastNamePaterno   String?  @map("last_name_paterno")
  lastNameMaterno   String?  @map("last_name_materno")
  isActive          Boolean  @default(true)
  isLeader          Boolean  @default(false) @map("is_leader") // Indica si el usuario es líder
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relaciones
  familyGroup FamilyGroup? @relation(fields: [familyGroupsUuid], references: [uuid], onDelete: Cascade)

  @@map("users")
}
